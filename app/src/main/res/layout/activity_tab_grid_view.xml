<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tab_grid_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xingge.opensourcechina.activity.TabGridViewActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:onClick="editItem"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topGridView"
        android:numColumns="4"
        android:gravity="center"
        android:verticalSpacing="10dp"
        android:layout_marginTop="10dp"></GridView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#535353"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomGridView"
        android:numColumns="4"
        android:gravity="center"
        android:verticalSpacing="10dp"
        ></GridView>

</LinearLayout>
