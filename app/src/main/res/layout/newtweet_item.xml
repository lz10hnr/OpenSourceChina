<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Tweet_Listener"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp">

    <ImageView
        android:id="@+id/Tweet_Item_Image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:id="@+id/Tweet_Ralat_Zong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/Tweet_Item_Image">

        <TextView
            android:id="@+id/Tweet_Item_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Tweet_Item_News"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Tweet_Item_Title"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/Tweet_Item_Image_Small"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:layout_below="@+id/Tweet_Item_News"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Tweet_Ral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tweet_Ralat_Zong"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Tweet_Item_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6E6E6E"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/Tweet_Item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/Tweet_Item_Time"
            android:textColor="#6E6E6E"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <CheckBox
                android:id="@+id/Tweet_Item_Zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_zan"
                android:button="@null" />

            <TextView
                android:id="@+id/Tweet_Item_Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="赞"
                android:textColor="#6E6E6E"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="评论"
                android:textColor="#6E6E6E"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="转发"
                android:textColor="#6E6E6E"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/Tweet_Ral"
        android:layout_marginTop="15dp"
        android:background="#DBDADE" />
</RelativeLayout>